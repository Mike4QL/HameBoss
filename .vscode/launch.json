{
    "version": "0.2.0",
    "configurations": [
         {
            "type": "chrome",
            "request": "launch",
            "name": "Ctr Website",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceRoot}/HbController",
            "userDataDir": "${workspaceRoot}/.vscode/chrome"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Ctr Server",
            "program": "${workspaceRoot}/HbController/bin/www",
            "cwd": "${workspaceRoot}/HbController"
        },
        {
            "name": "Gateway",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/HbGateway/app.js",
            "stopOnEntry": false,
            "args": [],
            "cwd": "${workspaceRoot}/HbGateway",
            "preLaunchTask": null,
            "runtimeExecutable": null,
            "runtimeArgs": [
                "--nolazy"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "console": "internalConsole",
            "sourceMaps": false,
            "outDir": null
        },
        {
            "name": "Attach",
            "type": "node",
            "request": "attach",
            "port": 5858,
            "address": "localhost",
            "restart": false,
            "sourceMaps": false,
            "outDir": null,
            "localRoot": "${workspaceRoot}",
            "remoteRoot": null
        },
        {
            "name": "Attach to Process",
            "type": "node",
            "request": "attach",
            "processId": "${command.PickProcess}",
            "port": 5858,
            "sourceMaps": false,
            "outDir": null
        }
    ],
    "compounds": [
        {
            "name": "Controller",
            "configurations": ["Ctr Server", "Ctr Website"]
        }
    ]
}